{
  "name": "reservation-backend",
  "version": "1.0.0",
  "description": "Backend API for Food Queue Reservation System",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "build": "tsdown src/index.ts ",
    "generate": "bunx prisma generate",
    "db:generate": "bunx prisma generate",
    "db:push": "bunx prisma db push",
    "db:migrate": "bunx prisma migrate dev",
    "db:migrate:prod": "bunx prisma migrate deploy",
    "db:studio": "bunx prisma studio",
    "db:seed": "bun run src/prisma/seed.ts",
    "create-admin": "bun run src/scripts/create-admin.ts",
    "lint": "bunx eslint src/",
    "typecheck": "bunx tsc --noEmit"
  },
  "dependencies": {
    "@elysiajs/bearer": "^1.4.2",
    "@elysiajs/cookie": "^0.8.0",
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/jwt": "^1.4.0",
    "@elysiajs/openapi": "^1.4.12",
    "@elysiajs/swagger": "^1.3.1",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "arctic": "^1.2.1",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^2.0.1",
    "dotenv": "^17.2.3",
    "elysia": "^1.4.19",
    "logixlysia": "^5.3.0",
    "nanoid": "^5.0.6",
    "nodemailer": "^7.0.11",
    "pg": "^8.16.3",
    "tsdown": "^0.18.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/nodemailer": "^7.0.4",
    "@types/pg": "^8.16.0",
    "bun-types": "latest",
    "prisma": "^7.2.0",
    "typescript": "^5.3.3"
  },
  "module": "src/index.ts",
  "type": "module"
}
